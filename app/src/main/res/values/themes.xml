<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitnessApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/exo2_wght</item>
        <item name="colorOnContainer">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="colorOnSurface">@color/dark_blue</item>
        <item name="colorContainer">@color/dark_blue</item>
    </style>
    <style name="CustomActionbar" parent="ThemeOverlay.MaterialComponents.ActionBar">

        <item name="colorControlNormal">@color/dark_blue</item>
    </style>
    <style name="Theme.FitnessApp" parent="Base.Theme.FitnessApp" />

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item> <!--text color-->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorOnSurface">@color/dark_blue</item> <!-- title color-->
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Spinner" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="colorContainer">@color/dark_blue</item>
        <item name="cornerRadius">20dp</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
        <item name="strokeWidth">2sp</item>
        <item name="endIconTint">@color/dark_blue</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>